@model IEnumerable<TicketSystem.Web.Models.TicketPartialViewModel>

@{
    ViewBag.Title = "Home Page";
}

<div class="row-fluid">
    @for (int i = 0; i < Model.Count(); i++)
    {
        var ticket = Model.ElementAt(i);
        <div class="span4">
            <h2>@ticket.Title </h2>
            <p><strong> Category:</strong> @ticket.Category</p>
            <p><strong>Author:</strong> @ticket.Author</p>
            <p>@ticket.Comments comment(s)</p>
            <p><a class="btn" href="@Url.Action("Details", "Tickets", new { ticket.Id })">More Details...</a></p>
        </div>

        if (i > 0 && (i + 1) % 3 == 0)
        { 
        @:</div>
        @:<div class="row-fluid">
        }
    }
</div>