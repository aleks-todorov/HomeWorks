@model IEnumerable<TicketSystem.Web.Models.ListPageTicketViewModel>

@{
    ViewBag.Title = "Search result";
}

<h2>@ViewBag.Title</h2>
<div class="row-fluid">
    <div class="span3">
        <h4>Title</h4>
    </div>
    <div class="span3">
        <h4>Category</h4>
    </div>
    <div class="span3">
        <h4>Author</h4>
    </div>
    <div class="span3">
        <h4>Priority</h4>
    </div>
</div>
<div class="row-fluid">
    @for (int i = 0; i < Model.Count(); i++)
    {
        var ticket = Model.ElementAt(i);
        <div class="row-fluid">
            <div class="span3">
                <h4>@ticket.Title</h4>
            </div>
            <div class="span3">
                <h4>@ticket.Category</h4>
            </div>
            <div class="span3">
                <h4>@ticket.Author</h4>
            </div>
            <div class="span3">
                <h4>@ticket.PriorityToString</h4>
            </div>
        </div>
    }
</div>